mixin section(className=false, titleSection=title, wide=false)
  section.l-section(class=className, class={'l-section--full' : wide})&attributes(attributes)
    .l-section__wrapper.l-container(class=`${className}__wrapper`)
      if titleSection
        h2.l-section__title.font-h2!= titleSection

      if block
        block
