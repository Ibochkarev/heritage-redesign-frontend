    .s-page-article__wrapper
      +m_breadcrumbs(['Главная'], 'Государственная или частная школа - что лучше?')
      .s-page-article__inner
        h1.s-page-article__title.font-h2 Государственная или частная школа - что лучше?
        .s-page-article__headline
          .s-page-article__date.font-xs.font-light 16.03.2021
          .s-page-article__time.font-xs.font-light
            +svgMono("ic-outline-access-time")
